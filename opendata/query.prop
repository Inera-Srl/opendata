	SELECT \
		st.descrizione AS stato, \
		s.id_biblioteca AS id, \
		concat('IT-', b.isil_provincia, lpad(b.isil_numero, 4, 0)) as 'isil confluita' \
	FROM \
		stato_catalogazione_tipo AS st, \
		stato_catalogazione AS s \
